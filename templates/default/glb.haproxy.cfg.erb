if @node['lb']['admin']['enable'] == true %>

<%
  if node['lb']['admin']['port'].nil?
    port = 22002
  else
    port node['lb']['admin']['port']
  end

  if node['lb']['admin']['address'].nil?
    addr = "*" 
  else
