
global
    log 127.0.0.1   local0 info
    maxconn 4096
    #debug
    #quiet
    user haproxy
    group haproxy

defaults
    log global
    option dontlognull
    option redispatch
    option clitcpka
    option srvtcpka
    option tcpka
    retries 3
    maxconn 1300
    contimeout 10000
    clitimeout 50000
    srvtimeout 50000

<% @node['lb']['frontend'].each do |fe| 

  if fe['port'].nil?
    port = 80
  else
    port = fe['port']
  end

%>

frontend <%= "#{fe['name']} *:#{port}" %>
  acl AF src  -f /opt/skystack/etc/haproxy/subnets/AF.co.subnets
  acl AN src  -f /opt/skystack/etc/haproxy/subnets/AN.co.subnets
  acl AS src  -f /opt/skystack/etc/haproxy/subnets/AS.co.subnets
  acl EU src -f /opt/skystack/etc/haproxy/subnets/EU.co.subnets
  acl NA src  -f /opt/skystack/etc/haproxy/subnets/NA.co.subnets
  acl OC src -f /opt/skystack/etc/haproxy/subnets/OC.co.subnets
  acl SA src -f /opt/skystack/etc/haproxy/subnets/SA.co.subnets
    
  	
    # this sets up the acl to backend mapping i.e use_backend AS if AS
  <% fe['use_backend'].each do |ub| %>
    <%= "use_backend #{ub['backend']} if #{ub['if_acl']}" %> 
  <% end %>
    <%= "default_backend #{fe['default_backend']}" %>

<% end %>


  	
<% @node['lb']['backends'].each do |be| %>
backend <%= "#{be['name']}" %>

  mode http
  balance <%= "#{be['algorithm']}" %>  # Load Balancing algorithm
  option httpchk
  option forwardfor
  
  <% be['servers'].each do |srv| %>
    
    <% 
      if srv['hostname'].nil? && !srv['ip'].nil?
        address = srv['ip']
       elsif srv['ip'].nil? && !srv['hostname'].nil?
        address = srv['hostname']
       end 
    %>

    <% if address && srv['port'] && srv['weight'] && srv['maxconn'] %>
    <%= "server #{srv['name']} #{address}:#{srv['port']} weight #{srv['weight']} maxconn #{srv['maxconn']} check" %> 
    <% end %>
   
  <% end %>

<% end %>

